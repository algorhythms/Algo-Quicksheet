\usepackage[utf8]{inputenc}
\usepackage{setspace}


% Default fixed font does not support bold face
\DeclareFixedFont{\ttb}{T1}{txtt}{bx}{n}{8} % for bold
\DeclareFixedFont{\ttm}{T1}{txtt}{m}{n}{8}  % for normal

% Custom colors
\usepackage{color}
\definecolor{deepblue}{rgb}{0,0,0.5}
\definecolor{deepred}{rgb}{0.6,0,0}
\definecolor{deepgreen}{rgb}{0,0.5,0}
\definecolor{lightgray}{rgb}{0.7,0.7,0.7}

\usepackage{listings}
% Python style for highlighting
\newcommand\pythonstyle{\lstset{
    language=Python,
    basicstyle=\setstretch{0.8}\ttb,
    morekeywords={super, assert, self, yield, as},  % Add keywords here
    keywordstyle=\ttm\color{deepblue},
    columns=flexible,
    literate={\_}{\ttb{\char`_}}1{-}{\ttb{-}}1{<}{\ttb{<}}1{>}{\ttb{>}}1{\\}{\ttb{\char`\\}}1{\{}{\ttb{\char`\{}}1{\}}{\ttb{\char`\}}}1,
    keepspaces=true,
    commentstyle=\ttm\color{lightgray},
    emph={},  % Custom highlighting
    emphstyle=\ttm\color{deepred},  % Custom highlighting style
    stringstyle=\color{deepgreen},
    % frame=tb,  % Any extra options here
    showstringspaces=false
}}

% Python environment
\lstnewenvironment{python}[1][]{
  \pythonstyle
  \lstset{#1}
}{}

% Python for external files
\newcommand\pythonexternal[2][]{
  {
    \pythonstyle
    \lstinputlisting[#1]{#2}
  }
}

% Python for inline
%% avoid white space in \newcommand
\newcommand\pythoninline[1]{\pythonstyle\lstinline!#1!}

% alias
\newcommand{\pyinline}{\pythoninline}
\newcommand{\pyexternal}{\pythonexternal}

